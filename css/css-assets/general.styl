// GENERAL
@import '../assets/imports.styl'

*
  bbox()

html
  font-size 16px
  
body, html
  min-height 100%
  margin 0
  padding 0
  min-width 32*gs
  overflow-x hidden

body
  min-height 100%
  font-family 'Open Sans'
  background-color c-bg
  // background-color dp
  // background-color rgba(c-green1, .5)
  color c-blue1


::selection
  background-color c-red1
  color  white
  text-shadow none

::-moz-selection
  background-color c-red1
  color white
  text-shadow none
  
.text-align-center-g
  text-align center

// FONT
.bold-g, .b-g
  font-weight bold
// FONT

.op-0-g
  opacity 0
.op-5-g
  opacity .5

.text-align-g
  text-align center

.float-left-g,  .f-l-g
  float left
.float-right-g, .f-r-g
  float right

.h-g
  display none
.h-g-i
  display none II

.hl-g
  hl c-grey6


clearfix()
  zoom 1
  &:after, &:before
    content ''
    display table
  &:after
    clear both
// clearfix alias
cf = clearfix

// CLEARFIX
.cf, clearfix
  clearfix()

