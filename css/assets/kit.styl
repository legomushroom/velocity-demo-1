@import '../assets/imports.styl'

body
  margin-bottom 20*gs
  background c-bg

.hash-e
  font-size 12px
  color c-grey6
  margin-bottom gs
  margin-top 2*gs
  max-width 100%
  padding gs 0 
  textel()
  width 5*gs

.icon-sample-kl
  float left
  margin 2*gs

.k-sample
  float left
  margin 2*gs

.k-content
  background-color c-grey6
  rect 100%
  min-height 2*gs
  border-radius br

.main-kl
  max-width 200*gs
  margin 0 auto
  padding 4*gs 0

.section-kl
  margin-left 2*gs
  margin-right 2*gs
  & + .section-kl
    margin-top 8*gs

.header-ke
  font-size 16px
  padding 2*gs 0
  color c-grey4
  background-color rgba(0,0,0,.01)
  padding-left 2*gs
  margin-left -2*gs
  border-radius br

.color-sample-ke
  rect 4*gs
  // margin gs
  float left

.k-w-bg, .k-d-bg
  background-color white
  padding 2*gs
  border-radius br

.k-d-bg
  background-color c-grey6



